<Window x:Class="TraficLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraficLight"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="374" Stroke="Black" VerticalAlignment="Center" Width="190" Fill="Black"/>
        <Ellipse x:Name="Red" HorizontalAlignment="Center" Height="100" Margin="0,49,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Fill="#FF220101"/>
        <Ellipse x:Name="Yellow" HorizontalAlignment="Center" Height="100" Stroke="Black" VerticalAlignment="Center" Width="100" Fill="#FF3E3005"/>
        <Ellipse x:Name="Green" HorizontalAlignment="Center" Height="100" Margin="0,272,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Fill="#FF141B0C"/>

    </Grid>
</Window>
